{
    "VCAP_SERVICES": {
<% datastores.forEach(function(store) { -%>
        "<%=store.type%>": [
            {
                "name": "<%=store.name%>",
                "label": "<%=store.type%>",
                "tags": [],
                "plan": "<%=store.plan%>",
                "credentials": {
                    "host": "localhost",
                    "url": "<%=store.url%>",
                    "username": "<%=store.username%>",
                    "password": "<%=store.password%>",
                    "port": 5984
                }
            }
        ],
<% }); -%>
    }
}
